@model OTAnswerService.Models.SearchResultViewModel

<div class="container">
    
    @using(Html.BeginForm("Search"))
    {
        <input name="searchString" id="searchString" placeholder="Введите поисковый запрос"/>
        <input name="options" id="options" type="hidden" value="number"/>
        <input type="submit" class="btn btn-danger" value="Поиск"/>
    }
    
    <div class="btn-group" data-toggle="buttons-radio">
        <button id="number" type="button" class="btn btn-primary active" onclick="selectOption(this)">Поиск по номеру</button>
        <button id="question" type="button" class="btn btn-primary" onclick="selectOption(this)">Поиск по вопросу</button>
        <button id="answer" type="button" class="btn btn-primary" onclick="selectOption(this)">Поиск по ответу</button>
    </div>

    @if (Model != null)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>№</td>
                    <td>Тема</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @Html.DisplayFor(x => x.Results)
            </tbody>
        </table>
    }
</div>